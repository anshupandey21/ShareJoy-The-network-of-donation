<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="comman1.Home_Fragment_D">


    <RelativeLayout
        android:id="@+id/statusBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@+id/bannerHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:fontFamily="cursive"
            android:text="ShareJoy"
            android:textColor="#975DE5"
            android:textSize="40sp"
            android:textStyle="bold"></TextView>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bannerHome"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="08sp"
        android:background="@drawable/home_banner"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusBar">


        <TextView
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/adamina"
            android:text="                                                             Share your love with Donation"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/home_1" />




    </LinearLayout>


    <TextView
        android:id="@+id/donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alice"
        android:text="Donate"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerHome" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donate">


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:background="@drawable/list_button"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            >




            <RelativeLayout
                android:id="@+id/foodLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF">


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/food_1" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="68dp"
                    android:gravity="center"
                    android:text="Food"
                    android:textColor="#000000"
                    android:textSize="17sp" />




            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:background="@drawable/list_button"
            android:layout_marginRight="5dp"
            >




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="#FFFFFF"
                android:layout_marginTop="1dp"
                android:id="@+id/eduLayout"
               >


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/eduction" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="68dp"
                    android:gravity="center"
                    android:text="Education"
                    android:textColor="#000000"
                    android:textSize="17sp" />




            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:background="@drawable/list_button"
            android:layout_marginRight="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="#FFFFFF"
                android:layout_marginTop="1dp"
                android:id="@+id/clothLayout">


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cloths" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="68dp"
                    android:gravity="center"
                    android:text="Cloths"
                    android:textColor="#000000"
                    android:textSize="17sp" />




            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:background="@drawable/list_button"
            android:layout_weight="1"
            >




            <RelativeLayout
                android:id="@+id/paymentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="#FFFFFF"
                android:layout_marginTop="1dp"
                >


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/monetary" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="68dp"
                    android:gravity="center"
                    android:text="Monetary"
                    android:textColor="#000000"
                    android:textSize="17sp" />




            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>